.container {
    width: 100%;
    margin: 2rem 2rem 2rem 0;
    align-items: center;
    justify-content: center;
}

.content {
    form {
      input {
        width: 100%;
        margin-bottom: 1rem;
      }
    }
    h1 {
      font-size: 1.4rem;
    }
  
    > p {
      margin-bottom: 10px;
    }
  
    @supports ((-webkit-backdrop-filter: none) or (backdrop-filter: none)) {
      background-color: rgb(17 17 17/0.25);
      -webkit-backdrop-filter: blur(5rem) brightness(0.75) saturate(5);
      backdrop-filter: blur(5rem) brightness(0.75) saturate(5);
    }
    padding: 50px 35px;
    border-radius: 20px;
}

.title {
    font-size: 25px;
    font-weight: 500;
    position: relative;
    margin-bottom: 1rem;
}

.title::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 3px;
    width: 265px;
    border-radius: 5px;
    background: linear-gradient(135deg, #71b7e6, #9b59b6);
}

.submit {
    display: flex;
    justify-content: space-between;
    margin-top: 7px;
}

.text {
    background: linear-gradient(45deg, #4aa5ff, #4affff, #6e6efc, #ffa54a);
    background-clip: text;
    -webkit-background-clip: text;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: underline;
}

.btn {
    padding: 15px 0px;
    display: flex;
    justify-content: left;
  
    > button {
      border-radius: 15px;
      padding: 9px 20px;
    }
}